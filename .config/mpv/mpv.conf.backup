log-file="/home/ben/.config/mpv/mpv.log"

#profile=gpu-hq
hwdec=auto-safe,vaapi
vaapi-device=/dev/dri/card0
hwdec-codecs=all
vo=gpu
#framedrop=vo
ao=pulse
#scale=lanczos
#dither-depth=no
#correct-downscaling=yes
#sigmoid-upscaling=no
#deband=no

cache=yes
demuxer-max-bytes=500M
demuxer-max-back-bytes=100M
cache-pause=no
slang=en,eng
#sharpen=0.1
sub-bold=no
audio-spdif=ac3,eac3,dts-hd,truehd
save-position-on-quit
#pulse-latency-hacks=yes
sub-scale-with-window=yes
sub-font='SF-Mono-Semibold'
sub-font-size=40
sub-border-size=1
sub-color=1.0/1.0/0.0/0.7
sub-border-style=opaque-box
#sub-border-style=background-box
sub-border-color='#000000'
sub-back-color='#000000'
#sub-fill-color="#000000"
#sub-opacity=0.5
keep-open=yes
on-all-workspaces
autofit=70%x70%
speed=1.75
stop-screensaver=yes
geometry=50:40

load-stats-overlay=yes
keep-open=yes

osd-font-size=25
term-osd-bar=yes
cursor-autohide=yes
cursor-autohide-timeout=2
